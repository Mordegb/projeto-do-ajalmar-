FILE  *parametro(char str[]) {
    FILE *arq = fopen(str, "rb+");
    if (arq == NULL) {
        arq = fopen(str, "wb+");
        if (arq == NULL) {
            printf("erro ao abrir arquivo");
            return arq;
        }
    }
}

FILE *leitura(char str[]) {         //abre o arquivo para leitura
    FILE *arq = fopen(str, "rb");
    return arq;
}

void uf_arq_to_vetor(FILE *f, estd *vetor) {
    FILE *f = leitura("estado.bin");
    fseek(f , 0, SEEK_SET  );
    fread(vetor_uf, sizeof(estd), 1, f);
    fclose(f);

}

void tam_vetor(){
    FILE *f = leitura("estado.bin");
    fseek(f , 0, SEEK_END  );
    int tam = ftell(f)/sizeof(estd);
}

